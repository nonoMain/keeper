# this is a default basic backup profile

# @brief add $HOME .rc files
add_home_dotfiles()
{
	local dirFrom="$HOME"
	local dirTo=""
	local paths=(
		'.aliases'
		'.editorconfig'
		# rc files
		'.bashrc'
		'.zshrc'
		'.vimrc'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

# @brief add .config/ files
add_config_files()
{
	local dirFrom="$HOME/.config"
	local dirTo=".config"
	local paths=(
		# rc files
		'*rc'
		'.bash_profile'
		'.tmux.conf'
		'.screenrc'
		'.gitconfig'
		'.fonts'
		'.themes'
		'.icons'
		'latte*'
		# tools
		'alacritty'
		'nvim'
		'nautilus'
		'xournalpp'
		'vlc*'
		'GIMP'
		'libreoffice*'
		# Desktop enviorment
		'gtkrc*'
		'gtk-*'
		'fontconfig'
		# kde-plasma
		'KDE'
		'plasma*'
		'Kvantum'
		'kcminputrc'
		'kdeglobals'
		'kglobalshortcutsrc'
		'klipperrc'
		'krunnerrc'
		'kscreenlockerrc'
		'ksmserverrc'
		'kwinrc'
		'kwinrulesrc'
		'khotkeysrc'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

add_share_files()
{
	local dirFrom="$HOME/.local/share"
	local dirTo=".local/share"
	local paths=(
		'fonts'
		'plasma'
		'color-schemes'
		'icons'
		'wallpapers'
		'vlc'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

add_profile_backup ()
{
	add_home_dotfiles
	add_config_files
	add_share_files
}
