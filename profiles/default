# this is a default basic backup profile (written in BASH)

# @brief add $HOME .rc files
default_home_files()
{
	local dirFrom="."
	local dirTo="."
	local paths=(
		'.aliases'
		'.editorconfig'
		# rc files
		'.useful_functions'
		'.bashrc'
		'.zshrc'
		'.vimrc'
		'.vim'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

# @brief add .config/ files
default_config_files()
{
	local dirFrom=".config"
	local dirTo=".config"
	local paths=(
		# DE stuff
		'.fonts'
		'.themes'
		'.icons'
		'gtkrc*'
		'gtk-*'
		'fontconfig'
		# tools
		'lsd'
		'htop'
		'btop'
		'alacritty'
		'nvim'
		'nautilus'
		'xournalpp'
		'okularpartrc'
		'okularrc'
		'GIMP'
		'libreoffice'
		'VirtualBoxVMrc'
		'VirtualBoxrc'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

default_share_files()
{
	local dirFrom=".local/share"
	local dirTo=".local/share"
	local paths=(
		'fonts'
		'plasma'
		'color-schemes'
		'icons'
		'wallpapers'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

use_profile_backup ()
{
	default_home_files
	default_config_files
	default_share_files
}
