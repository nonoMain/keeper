# this is a kde basic backup profile (written in BASH)
# @brief add .config/ files
#
# some are taken from https://github.com/shalva97/kde-configuration-files

kde_home_files()
{
	local dirFrom="$HOME"
	local dirTo="."
	local paths=(
		'.kde'
		'.kde4'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

kde_config_files()
{
	local dirFrom="$HOME/.config"
	local dirTo=".config"
	local paths=(
		'plasma-org.kde.plasma.desktop-appletsrc'
		'plasmarc'
		'plasmashellrc'
		'kdeglobals'
		'kwinrc'
		'kwinrulesrc'
		'lattedockrc'
		'latte'
		'dolphinrc'
		'ksmserverrc'
		'kcminputrc'
		'kglobalshortcutsrc'
		'klipperrc'
		'kscreenlockerrc'
		'systemsettingsrc'
		'Kvantum'
		'kdegraphicsrc'
		'discoverrc'
		'baloofilerc'
		'kactivitymanagerd-statsrc'
		'kactivitymanagerdrc'
		'kalendaracrc'
		'kateschemarc'
		'kconf_updaterc'
		'kded5rc'
		'kfontinstuirc'
		'kgammarc'
		'khotkeysrc'
		'kmixrc'
		'knotesrc'
		'krunnerrc'
		'ksplashrc'
		'kwalletrc'
		'kxkbrc'
		'kcmfonts'
		'plasmanotifyrc'
		'autostart'
		'spectaclerc'
		'gtkrc'
		'gtkrc-2.0'
		'gtk-3.0/*'
		'gtk-4.0/*'
		'breezerc'
		'lightlyrc'
		'lightlyshaders.conf'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

kde_share_files()
{
	local dirFrom="$HOME/.local/share"
	local dirTo=".local/share"
	local paths=(
		'plasma'
		'color-schemes'
		'icons'
		'wallpapers'
		'fonts'
		'dolphin'
		'kxmlgui5'
		'user-places.xbel'
	)
	add_entries_to_archive "$dirFrom" "$dirTo" "${paths[@]}"
}

use_profile_backup ()
{
	kde_home_files
	kde_config_files
	kde_share_files
}
